@model ContactViewModel


@{
    ViewData["Title"] = "ContactUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">İletişim</h4>
                </div>
                <div class="box-body">
                    <form asp-action="ContactUpdate">
                        <div class="form-body">
                            <input asp-for="ContactDTO.ID" type="hidden" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="font-weight-700 font-size-16" asp-for="ContactDTO.Address"></label>
                                        <input type="text" class="form-control" asp-for="ContactDTO.Address">
                                    </div>
                                </div>

                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="font-weight-700 font-size-16" asp-for="ContactDTO.City"></label>
                                        <input type="text" class="form-control" asp-for="ContactDTO.City">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="font-weight-700 font-size-16" asp-for="ContactDTO.Country"></label>
                                        <input type="text" class="form-control" asp-for="ContactDTO.Country">
                                    </div>
                                </div>

                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="font-weight-700 font-size-16" asp-for="ContactDTO.EmailInfo"></label>
                                        <input type="text" class="form-control" asp-for="ContactDTO.EmailInfo">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="font-weight-700 font-size-16" asp-for="ContactDTO.Phone"></label>
                                        <input type="text" class="form-control" asp-for="ContactDTO.Phone">
                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                        </div>
                        <div class="form-actions mt-10">
                            <button type="submit" class="btn btn-lg btn-primary"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-lg btn-danger">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>



